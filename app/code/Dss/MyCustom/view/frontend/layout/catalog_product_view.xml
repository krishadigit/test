<?xml version="1.0"?>
<page layout="1column"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Replace default Add to Cart block with custom Buy Now -->
        <referenceBlock name="product.info.addtocart" template="Dss_MyCustom::product/view/addtocart.phtml" />

        <!-- Add Custom Text Before Product Price -->
        <referenceContainer name="product.info.price">
            <block class="Magento\Framework\View\Element\Template"
                   name="custom.price.text"
                   template="Dss_MyCustom::pricetext.phtml"
                   before="-" />
        </referenceContainer>

        <referenceBlock name="view.addto.wishlist" remove="true" />
        <!-- or for category pages -->
        <!-- <referenceBlock name="category.product.addto.wishlist" remove="true" /> -->
        <referenceBlock name="view.addto.compare" remove="true"/>

        
        <referenceBlock name="product.info.addtocart" template="Dss_MyCustom::product/view/buynow.phtml">
            <block class="Magento\Wishlist\Block\Catalog\Product\View\AddTo\Wishlist"
                   name="custom.addto.wishlist"
                   template="Dss_MyCustom::product/view/wishlist.phtml" />
            
            <block class="Magento\Catalog\Block\Product\View\AddTo\Compare"
                   name="custom.addto.compare"
                   template="Dss_MyCustom::product/view/compare.phtml">
                <arguments>
                    <argument name="addToCompareViewModel"
                        xsi:type="object">Magento\Catalog\ViewModel\Product\Checker\AddToCompareAvailability</argument>
                </arguments>
            </block>
        </referenceBlock>

    </body>
</page>
